{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "target": "es2020",
        "outDir": "out",
        "lib": ["es6", "es2018", "ES2019", "ES2020"],
        "jsx": "react",
        "sourceMap": true,
        "rootDir": "src",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "useUnknownInCatchVariables": false,
        "noImplicitThis": false
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        ".vscode test",
        "src/webviews/webview-side",
        "build",
        "src/test",
        "src/*.web.ts",
        "src/**/*.web.ts",
        "gulpfile.js"
    ]
}
